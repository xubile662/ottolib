<?xml version="1.0" encoding="utf-8"?>
<glenn.base.viewmodule.layout.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/hitbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                style="@style/TextView10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxWidth="114dp"
                android:text="Product name extended for 2 lines"
                android:textColor="@color/color_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_price"
                style="@style/TextView12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:maxWidth="125dp"
                android:text="Product price" />

            <TextView
                android:id="@+id/product_discount_price"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:text="Product price"
                android:textColor="@color/ocean_blue" />
        </LinearLayout>

        <ImageView
            android:id="@+id/product_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_red"
            android:minHeight="66dp"
            android:minWidth="66dp"
            android:visibility="gone" />
    </android.support.v7.widget.CardView>
</glenn.base.viewmodule.layout.CheckableLayout>