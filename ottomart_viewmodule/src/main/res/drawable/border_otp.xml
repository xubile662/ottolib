<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:padding="2dp"
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#cbcbcb" />


        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerY="20%"
                android:endColor="#ffffff"
                android:startColor="#f3f3f3" />

        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerY="80%"
                android:endColor="#fff3f3f3"
                android:startColor="#00ffffff" />

        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="0"
                android:centerColor="#00ffffff"
                android:centerX="90%"
                android:endColor="#fff3f3f3"
                android:startColor="#00ffffff" />

        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="0"
                android:centerColor="#00ffffff"
                android:centerX="10%"
                android:endColor="#00ffffff"
                android:startColor="#fff3f3f3" />

        </shape>
    </item>


</layer-list>